<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:configChanges="orientation|keyboardHidden"
    tools:context="com.example.stprototype.CreateObservationActivity" >

    <AbsoluteLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <Spinner
            android:id="@+id/traitListSpinner"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_x="10dp"
            android:layout_y="113dp"
            android:animateLayoutChanges="true"
            android:gravity="center" />

<!--         <ImageView
            android:id="@+id/imageView_create"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_x="165dp"
            android:layout_y="30dp" /> -->

        <Gallery
            android:id="@+id/observation_create_gallery"
            android:layout_width="155dp"
            android:layout_height="170dp"
            android:layout_x="170dp"
            android:layout_y="2dp"
            android:spacing="1dp"
            android:unselectedAlpha="0.5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="10dp"
            android:layout_y="10dp"
            android:text="Observation Name:"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/cameraButton_Create"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_x="280dp"
            android:layout_y="187dp"
            android:background="@drawable/et"
            android:gravity="center"
            android:src="@android:drawable/ic_menu_camera" />

        <EditText
            android:id="@+id/observationNameField"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_x="10dp"
            android:layout_y="43dp"
            android:background="@drawable/et"
            android:gravity="center"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="10dp"
            android:layout_y="80dp"
            android:text="Trait List:"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="10dp"
            android:layout_y="160dp"
            android:text="Modify Deadline:"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/modifyDeadline_create"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_x="10dp"
            android:layout_y="195dp"
            android:background="@drawable/et"
            android:editable="false"
            android:gravity="center"
            android:textSize="17sp" />

        <Button
            android:id="@+id/observationDeadlineButton"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_x="190dp"
            android:layout_y="187dp"
            android:background="@drawable/et"
            android:gravity="center"
            android:text="Pick Date"
            android:textSize="14sp" />

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="195dp"
            android:layout_x="0dp"
            android:layout_y="240dp"
            android:scrollbars="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent" >

                <TableLayout
                    android:id="@+id/observation_create_table"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical"
                    android:stretchColumns="1" >
                </TableLayout>
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/observation_create_drawing_button"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_x=" 40dp"
            android:layout_y="440dp"
            android:background="@drawable/et"
            android:gravity="center"
            android:text="Drawing Panel"
            android:textSize="14sp" />

        <Button
            android:id="@+id/observation_create_comment_button"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_x="210dp"
            android:layout_y="440dp"
            android:background="@drawable/et"
            android:gravity="center"
            android:text="Comments"
            android:textSize="14sp" />
    </AbsoluteLayout>

</RelativeLayout>