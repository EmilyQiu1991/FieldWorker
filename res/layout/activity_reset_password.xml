<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.stprototype.ResetPasswordActivity" >

    <AbsoluteLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <TextView
            android:id="@+id/oldPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="36dp"
            android:layout_y="81dp"
            android:text="Old Password:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/oldPasswordField"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_x="187dp"
            android:layout_y="71dp"
            android:inputType="textPassword"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/newPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="30dp"
            android:layout_y="142dp"
            android:text="New Password:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/newPasswordField"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_x="190dp"
            android:layout_y="137dp"
            android:inputType="textPassword"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/newPasswordComField"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_x="189dp"
            android:layout_y="208dp"
            android:inputType="textPassword"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/newPasswordZCom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="3dp"
            android:layout_y="216dp"
            android:text="New Password Com:"
            android:textSize="18sp" />

        <Button
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="190dp"
            android:layout_y="300dp"
            android:text="Submit"
            android:textSize="18sp" />

        <Button
            android:id="@+id/reset_password_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="50dp"
            android:layout_y="300dp"
            android:text="Cancel"
            android:textSize="18sp" />
    </AbsoluteLayout>

</RelativeLayout>